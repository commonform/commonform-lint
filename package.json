{
  "name": "commonform-lint",
  "description": "find technical errors in Common Form projects",
  "version": "0.3.0",
  "author": "Kyle E. Mitchell <kyle@kemitchell.com> (http://kemitchell.com)",
  "dependencies": {
    "commonform-analyze": "^0.4.0"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "check-versions": "^1.0.0",
    "istanbul": "^0.3.5",
    "jscs": "^1.8.1",
    "jshint": "^2.5.10",
    "mocha": "^2.0.1"
  },
  "homepage": "https://commonform.github.io",
  "keywords": [
    "contracts",
    "document assembly",
    "knowledge management",
    "law",
    "lint",
    "markup"
  ],
  "license": "Apache-2.0",
  "main": "source/index.js",
  "repository": "commonform/commonform-lint",
  "scripts": {
    "check": "check-versions --check-module",
    "coverage": "istanbul cover _mocha && istanbul check-coverage coverage/coverage.json",
    "lint": "jshint source test && jscs source test",
    "pre-commit": "npm run lint && npm run check && npm run coverage",
    "test": "mocha",
    "travis-ci": "npm run pre-commit"
  }
}
